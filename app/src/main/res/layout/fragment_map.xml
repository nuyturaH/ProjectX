<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightGrey"
    tools:context=".fragment.MapFragment">

    <RelativeLayout
        android:id="@+id/rl_search_map_fragment"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:elevation="10dp"
        android:background="@android:color/white">

        <ImageView
            android:id="@+id/iv_magnify_map_fragment"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_search" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/et_search_map_fragment"
            android:layout_toRightOf="@id/iv_magnify_map_fragment"
            android:layout_centerVertical="true"
            android:textSize="15sp"
            android:textColor="@android:color/black"
            android:hint="Enter Address, City"
            android:imeOptions="actionSearch"/>

    </RelativeLayout>

    <com.google.android.gms.maps.MapView
        android:id="@+id/mv_map"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_add_event_map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_add_white" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_my_location_map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:clickable="true"
        android:src="@drawable/ic_my_location_white"
        app:layout_constraintBottom_toTopOf="@+id/fab_add_event_map"
        app:layout_constraintEnd_toEndOf="@+id/fab_add_event_map"
        android:focusable="true" />

    <ImageView
        android:id="@+id/iv_current_location_map"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:contentDescription="@string/current_location"
        android:src="@drawable/ic_add_location_red"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/mv_map"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</android.support.constraint.ConstraintLayout>