<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_bottom"
    app:startDestination="@id/graph_launch">

    <fragment
        android:id="@+id/my_profile_fragment"
        android:name="com.har8yun.homeworks.projectx.fragment.bottomNavigation.MyProfileFragment"
        android:label="My profile"
        tools:layout="@layout/fragment_my_profile" />
    <fragment
        android:id="@+id/map_fragment"
        android:name="com.har8yun.homeworks.projectx.fragment.bottomNavigation.MapFragment"
        android:label="Map"
        tools:layout="@layout/fragment_map" />
    <fragment
        android:id="@+id/top_charts_fragment"
        android:name="com.har8yun.homeworks.projectx.fragment.bottomNavigation.TopChartsFragment"
        android:label="Top charts"
        tools:layout="@layout/fragment_top_charts" />
    <fragment
        android:id="@+id/settings_fragment"
        android:name="com.har8yun.homeworks.projectx.fragment.bottomNavigation.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings" />
    <navigation android:id="@+id/graph_launch"
        app:startDestination="@id/fragment_launch">
        <fragment
            android:id="@+id/fragment_launch"
            android:name="com.har8yun.homeworks.projectx.fragment.LaunchFragment"
            android:label="Launch"
            tools:layout="@layout/fragment_launch">
            <action
                android:id="@+id/action_launchFragment_to_signInFragment"
                app:destination="@id/fragment_sign_in"
                app:enterAnim="@anim/enter_from_right"
                app:exitAnim="@anim/exit_to_right"
                app:popEnterAnim="@anim/enter_from_right"
                app:popExitAnim="@anim/exit_to_right"/>
            <action
                android:id="@+id/action_launchFragment_to_signUpFragment"
                app:destination="@id/fragment_sign_up"
                app:enterAnim="@anim/enter_from_right"
                app:exitAnim="@anim/exit_to_right"
                app:popEnterAnim="@anim/enter_from_right"
                app:popExitAnim="@anim/exit_to_right"/>
        </fragment>
        <fragment
            android:id="@+id/fragment_sign_up"
            android:name="com.har8yun.homeworks.projectx.fragment.SignUpFragment"
            android:label="Sign up"
            tools:layout="@layout/fragment_sign_up"
            />
        <fragment
            android:id="@+id/fragment_sign_in"
            android:name="com.har8yun.homeworks.projectx.fragment.SignInFragment"
            android:label="Sign in"
            tools:layout="@layout/fragment_sign_in" />
    </navigation>
</navigation>